<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cardapioOnline.activitys.TesteActivity">

    <ProgressBar
        android:id="@+id/progressbar_teste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:progress="2000"
        android:visibility="gone" />

    <Button
        android:id="@+id/bt_testes"
        android:layout_width="270dp"
        android:layout_height="47dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="TEST BUTTON" />

    <TextView
        android:id="@+id/ultimo_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt_testes"
        android:layout_alignStart="@+id/bt_testes"
        android:layout_below="@+id/bt_testes"
        android:layout_marginTop="45dp"
        android:text="Nada"
        android:textSize="24sp" />
</RelativeLayout>
