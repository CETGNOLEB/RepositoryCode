<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".posPedido.activities.MeusPedidosActivity">

    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:progressTint="@color/colorPrimary"
        android:visibility="gone"
        android:theme="@style/MyProgressbarColor"
        android:id="@+id/progressbar_pedidos_realizados" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_pedido_realizado"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_tam_pizza"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/img_entrega"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/numero_pedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Pedido Nº 4687"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/data_pedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Data: 29/03/2017" />

                <TextView
                    android:id="@+id/hora_pedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Hora: 20:38" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_status_pedido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Status: " />

                    <TextView
                        android:id="@+id/status_pedido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Confirmado"
                        android:textColor="#1D9D73" />

                </LinearLayout>

                <Button
                    android:id="@+id/bt_acompanhar_pedido"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="right"
                    android:text="acompanhar"
                    android:textSize="10sp" />


            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@+id/card_pedido_realizado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_pedido_realizado2"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_tam_pizza2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/img_entrega"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/numero_pedido2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Pedido Nº 2487"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/data_pedido2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Data: 25/03/2017" />

                <TextView
                    android:id="@+id/hora_pedido2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Hora: 15:10" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/txt_status_pedido2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Status: " />

                    <TextView
                        android:id="@+id/status_pedido2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#0D47A1"
                        android:text="Finalizado" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@+id/card_pedido_realizado2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_pedido_realizado3"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_tam_pizza3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/img_retirada"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/numero_pedido3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Pedido Nº 1252"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/data_pedido3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Data: 21/03/2017" />

                <TextView
                    android:id="@+id/hora_pedido3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Hora: 17:20" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/txt_status_pedido3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Status: " />

                    <TextView
                        android:id="@+id/status_pedido3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#0D47A1"
                        android:text="Finalizado" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>
