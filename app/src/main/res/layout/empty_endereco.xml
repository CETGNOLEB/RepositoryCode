<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/end_empty">

    <ImageView
        android:id="@+id/img_end_vazio"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/empty_endereco"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/text_end_vazio"
        android:layout_below="@+id/img_end_vazio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Sem Endereços"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/desc_end_vazio"
        android:layout_below="@+id/text_end_vazio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:text="Cadastre seus endereços."
        android:visibility="visible"/>

    <Button
        android:id="@+id/bt_end_empty"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:text="Novo Endereço"
        android:textColor="@color/textColorPrimary"
        android:background="@drawable/border_button_white"
        android:visibility="visible"
        android:layout_below="@+id/desc_end_vazio"
        android:layout_centerHorizontal="true" />

</RelativeLayout>