<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_icon_opcoes_perfil"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon_opcoes_perfil"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_perfil_icon"/>

    <TextView
        android:id="@+id/desc_opcoes_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/icon_opcoes_perfil"
        android:text="Meus Pedidos"
        android:textSize="20sp" />

    <View
        android:id="@+id/divider_opcoes_perfil"
        android:layout_below="@+id/desc_opcoes_perfil"
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#B6B6B6"/>

</RelativeLayout>