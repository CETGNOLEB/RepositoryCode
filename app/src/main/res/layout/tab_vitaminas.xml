<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cardapioOnline.activitys.CardapioMainActivity">

    <TextView
        android:id="@+id/textTabVitaminas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingTop="6dp"
        android:text="Escolha a sua:"
        android:textSize="20sp" />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/textTabVitaminas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_vitaminas">

    </android.support.v7.widget.RecyclerView>

    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:progressTint="@color/colorPrimary"
        android:theme="@style/MyProgressbarColor"
        android:id="@+id/progressbar_escolher_vitaminas" />

</RelativeLayout>
