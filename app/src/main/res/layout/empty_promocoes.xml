<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/end_empty">

    <ImageView
        android:id="@+id/img_sem_enderecos"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/img_promo"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/text_sem_enderecos"
        android:layout_below="@+id/img_sem_enderecos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Sem Promoções"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/desc_sem_enderecos"
        android:layout_below="@+id/text_sem_enderecos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:text="Não temos nenhuma promoção no momento!"
        android:visibility="visible"/>

</RelativeLayout>