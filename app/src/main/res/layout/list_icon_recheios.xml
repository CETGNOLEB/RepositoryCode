<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_recheios"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/item_img_recheio"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/item_img_recheio"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_nome_adicionais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Amendoim"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_valor_acressimo_adicionais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="+ R$ 1.00"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp">

            <ImageButton
                android:id="@+id/bt_menos_recheio"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_minus_circle" />

            <TextView
                android:id="@+id/qtd_do_recheio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/border_qtd_item"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:text="0"
                android:textSize="20dp" />


            <ImageButton
                android:id="@+id/bt_mais_recheio"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_plus_circle" />
        </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>