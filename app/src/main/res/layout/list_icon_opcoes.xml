<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_icon_opcoes"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingTop="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon_opcoes"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_perfil_icon"/>

    <TextView
        android:id="@+id/desc_opcoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/icon_opcoes"
        android:text="Meus Pedidos"
        android:textSize="16sp"
        android:textColor="@color/titleTextColor"/>

    <View
        android:id="@+id/divider_opcoes"
        android:layout_below="@+id/desc_opcoes"
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:layout_marginTop="20dp"
        android:background="#B6B6B6"/>

</RelativeLayout>