<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pizza_metade1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".cardapioOnline.pedidoDePizza.PizzaMetade1Activity">

    <include
        android:id="@+id/toolbar_pizza_metade1"
        layout="@layout/app_bar_layout" />

    <ProgressBar
        android:id="@+id/progressbar_pizza_metade1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:theme="@style/MyProgressbarColor"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_list_pizza_metade1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:layout_marginBottom="50dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/desc_tam_metade1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text=""
            android:textSize="17sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/pizzas_metade1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <RelativeLayout
        android:background="@color/colorPrimary"
        android:id="@+id/buttons_tela_pizza_metade1"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp">

        <Button
            android:id="@+id/bt_proximo_pizza_metade1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/icon_right"
            android:text="PRÃ“XIMO"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/bt_voltar_pizza_metade1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/bt_proximo_pizza_metade1"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/icon_left"
            android:text="VOLTAR"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

</RelativeLayout>